<UserControl x:Class="InvoiceManger.View.DateQuery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvoiceManger.View"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="800">
    <Grid Background="LightCyan">
        <StackPanel Orientation="Horizontal" Margin="0 0 0 0 " VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock HorizontalAlignment="Left" Margin="20,0,0,0" TextWrapping="Wrap" Text="查询参数：" FontSize="16"  Foreground="ForestGreen"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,0,0,0" TextWrapping="Wrap" Text="从：" />
            <DatePicker HorizontalAlignment="Left" Margin="20,0,0,0" Width="150" SelectedDate="{Binding FromDate}"/>
            <TextBlock HorizontalAlignment="Left"  Margin="60,0,0,0" TextWrapping="Wrap" Text="到："/>
            <DatePicker HorizontalAlignment="Left" Margin="20,0,0,0"   Width="150" SelectedDate="{Binding ToDate}"/>
        </StackPanel>
    </Grid>
</UserControl>
