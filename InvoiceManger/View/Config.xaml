<Window x:Class="InvoiceManger.View.Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:app="clr-namespace:InvoiceManger.Common"
        xmlns:local="clr-namespace:InvoiceManger.View"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator},Path=ConfigViewModel}"
        Title="系统配置" Height="800" Width="1100" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Button Width="90" Margin="5" Content="新建部门" Command="{Binding AppendDepartment}"/>
            <Button Width="90" Margin="5" Content="新建部门" Command="{Binding AppendDepartment}"/>

        </StackPanel>
    </Grid>
</Window>
